<form id="open_id_form" method="GET" action="/sessions/create">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <%= hidden_field_tag :back_to, params[:back_to] || request.path -%>
  <div class="form-group">
    <label style="display: block; text-align: center;">Log In using your Public Lab username</label>
    <label style="display: block; text-align: center;">or</label>
    <label style="display: block; text-align: center;">
      create a
      <a href="//publiclab.org/signup">Public Lab account</a>.
    </label>
  </div>
   <div class="form-group">
    <%= text_field_tag 'open_id', @login, { :required => true, :placeholder => "Username (not email)", :tabindex => 1, :class => 'form-control', :id => 'username-login' } %>
  </div>
  <div class="form-check">
    <label>
      <%= check_box_tag 'remember_me', '1', @remember_me, { :class => "form-check-input" } %> Remember me
    </label>
  </div>
  <%= submit_tag 'Log in', {:class => "btn btn-primary btn-large"} %>
  <br />
  <%= button_tag submit: 'Github', name: "subaction", value: "github" do%>
    <span class="btn btn-default" style="margin-left:2px;background-color: #333;">
      <i class="fa fa-github fa-fw" style="font-size:20px;color:white;"></i>
    </span>
  <%end%>
  <%= button_tag 'Google', name: "subaction", value: "google_oauth2" do%>
    <span class="btn btn-outline-light" style="margin-right:2px;background-color: #d34836;">
        <i class="fa fa-google fa-fw" style="font-size:20px;color:white;"></i>
    </span>
  <% end %>
  <%= button_tag submit: 'Twitter', name: "subaction", value: "twitter" do%>
      <span class="btn btn-outline-light" style="margin-left:2px;background-color: #1da1f2;">
    		<i class="fa fa-twitter fa-fw" style="font-size:20px;color:white;margin-left:2px;"></i>
			</span>
  <%end%>
  <%= button_tag 'Facebook', name: "subaction", value: "facebook" do%>
    <span class="btn btn-outline-light" style="margin-left:2px;background-color: #3b5998">
      <i class="fa fa-facebook fa-fw" style="font-size:20px;color:white;"></i>
		</span>
  <% end %>
</form>
