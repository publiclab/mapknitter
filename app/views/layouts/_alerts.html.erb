<div class="container-fluid" id="alerts">
  <% flash.each do |key, value| %> 
    <% if key == :notice %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">
          <i class="fa fa-close"></i></button><%= value %>
      </div>
    <% else %>
      <div class="alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">
          <i class="fa fa-close"></i></button><%= value %>
      </div>
    <% end %>
  <% end %>
</div>
